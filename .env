# .env

# --- Application Settings ---
APP_NAME="FlixPatrol India Scraper API"
CONTACT_EMAIL="maheshsharan28@gmail.com"

# --- Redis Configuration ---
# Set to "local" for Docker/VPS Redis, "upstash" for Upstash Redis
REDIS_TYPE=local

# Local Redis settings (using existing starlight Redis)
REDIS_HOST=host.docker.internal
REDIS_PORT=6380

# Upstash Redis settings (not used for VPS deployment)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Cache duration in seconds (e.g., 4 hours)
CACHE_EXPIRATION_SECONDS=14400
