# .env

# --- Application Settings ---
APP_NAME="FlixPatrol India Scraper API"
CONTACT_EMAIL="maheshsharan28@gmail.com"

# --- Redis Configuration ---
# Set to "local" for Docker/VPS Redis, "upstash" for Upstash Redis
REDIS_TYPE=local

# Local Redis settings (Docker Compose / VPS deployment)
REDIS_HOST=redis
REDIS_PORT=6379

# Upstash Redis settings (leave empty for local development)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Cache duration in seconds (e.g., 4 hours)
CACHE_EXPIRATION_SECONDS=14400
